---
import { Image } from 'astro:assets';
---

<section id="prices" class="relative overflow-hidden py-20">
  <!-- Background gradients -->
  <div class="bg-background absolute inset-0">
    <div
      class="absolute inset-0 bg-[radial-gradient(at_47%_33%,hsl(0,0%,100%)_0,transparent_59%)] opacity-10"
    >
    </div>
  </div>

  <div class="relative mx-auto max-w-lg px-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
      <div class="flex flex-col justify-center">
        <h2 class="font-title mb-4 hidden text-6xl font-normal italic md:block md:text-4xl">
          Lenin
        </h2>
        <p class="text-center text-2xl">Ciao gente! Siamo liberi! <br /> Chavaracacha!</p>
      </div>

      <div>
        <Image src="/lenny.webp" alt="img 1" width={200} height={200} class="w-full rounded-full" />
        <h2 class="font-title mx-auto mt-8 text-center text-6xl font-normal italic md:hidden">
          Lenin
        </h2>
      </div>
    </div>
  </div>
</section>
